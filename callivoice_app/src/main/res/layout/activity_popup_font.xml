<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/popup_element"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popupwindow_editresult_font"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="10sp"  >

        <Button
        android:id="@+id/closePopupBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/button_editresult_fontbutton2"
        android:text="닫기"/>


    <Button
        android:id="@+id/fontBtn1"
        android:fontFamily="@font/thefaceshop"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_editresult_fontbutton2"
        android:text="더페이스샵 잉크립퀴드체" />

    <Button
        android:id="@+id/fontBtn2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/fontBtn1"
        android:layout_below="@+id/fontBtn1"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nanumbrush"
        android:background="@drawable/button_editresult_fontbutton2"
        android:text="나눔손글씨 붓" />

    <Button
        android:id="@+id/fontBtn3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/fontBtn2"
        android:layout_below="@+id/fontBtn2"
        android:layout_marginTop="16dp"

        android:background="@drawable/button_editresult_fontbutton2"
        android:fontFamily="@font/seoulhangang"
        android:text="서울한강체" />

    <Button
        android:id="@+id/fontBtn4"
        android:fontFamily="@font/menbal"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/fontBtn3"
        android:layout_below="@+id/fontBtn3"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_editresult_fontbutton2"
        android:text="맨발의청춘" />

    <Button
        android:id="@+id/fontBtn5"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/fontBtn4"
        android:layout_below="@+id/fontBtn4"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/leesunsin"
        android:background="@drawable/button_editresult_fontbutton2"
        android:text="이순신체" />

    <Button
        android:id="@+id/fontBtn6"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/fontBtn5"
        android:layout_below="@+id/fontBtn5"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_editresult_fontbutton2"
        android:fontFamily="@font/bingrae"
        android:text="빙그레체" />

    </RelativeLayout>