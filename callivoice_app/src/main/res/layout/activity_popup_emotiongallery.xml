<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popupwindow_editresult_font"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:padding="10sp"  >

    <Button
        android:id="@+id/closePopupBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/button_editresult_fontbutton2"
        android:text="닫기"/>


    <ImageButton
        android:id="@+id/emotionBtn1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/button_editresult_fontbutton2" />

    <ImageButton
        android:id="@+id/emotionBtn2"

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/emotionBtn1"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_editresult_fontbutton2" />


    <ImageButton
        android:id="@+id/emotionBtn3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/emotionBtn1"
        android:layout_below="@+id/emotionBtn1"
        android:layout_marginTop="41dp"
        android:background="@drawable/button_editresult_fontbutton2" />

    <ImageButton
        android:id="@+id/emotionBtn4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/emotionBtn3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_editresult_fontbutton2" />

</RelativeLayout>