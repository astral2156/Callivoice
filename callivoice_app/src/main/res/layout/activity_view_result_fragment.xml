<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fragment_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/z_bgr_joy1" />

    <TextView
        android:id="@+id/fragment_text_thefaceshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/thefaceshop"
        android:text="결과창"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/fragment_text_nanum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/nanumbrush"
        android:text=""
        android:textSize="50sp" />

    <TextView
        android:id="@+id/fragment_text_seoul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/seoulhangang"
        android:text=""
        android:textSize="50sp" />

    <TextView
        android:id="@+id/fragment_text_menbal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/menbal"
        android:text=""
        android:textSize="50sp" />

    <TextView
        android:id="@+id/fragment_text_leesunsin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/leesunsin"
        android:text=""
        android:textSize="50sp" />

    <TextView
        android:id="@+id/fragment_text_bingrae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/bingrae"
        android:text=""
        android:textSize="50sp" />

</RelativeLayout>